                        {%- endif -%}
                      {% endif %}
                   </div>
                   <div class="acc-video-heading">{{ block.settings.m2-video-text | replace: 'p>', 'span>'}}</div>
                 </div>
               </div>
                   <div class="acc--video">
                 <div class="acc-card-cont">
                   <div class="acc-card-video"> 
                     {% if block.settings.m3_url_desktop != blank %}
