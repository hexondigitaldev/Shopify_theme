<link rel="stylesheet" href="{{ 'accordien.css' | asset_url }}" media="print" onload="this.media='all'">

{% style %}
   @media(min-width:1301px){
    .accrodien-{{section.id}} .accordien--card .acc--heading{
      font-size:{{section.settings.heading-size}}px;
    }
   .accrodien-{{section.id}} .accordien--card .acc-desc{
      font-size:{{section.settings.text-size}}px;
    }
   }
   @media(max-width:1300px){
    .accrodien-{{section.id}} .accordien--card .acc--heading{
      font-size:{{section.settings.heading-tb-size}}px;
    }
   .accrodien-{{section.id}} .accordien--card .acc-desc{
      font-size:{{section.settings.text-tb-size}}px;
    }
   }
   @media(max-width:750px){
    .accrodien-{{section.id}} .accordien--card .acc--heading{
      font-size:{{section.settings.heading-mb-size}}px;
    }
   .accrodien-{{section.id}} .accordien--card .acc-desc{
      font-size:{{section.settings.text-mb-size}}px;
    }
   }
{% endstyle %}


<section class="accordien__section accrodien-{{section.id}}">
  <div class="page-width accordien__section-main">
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'cards' -%}
        {% if block.settings.card-heading != blank %}
      <div class="accordien--card cards--section card-{{block.id}}">
        <div class="acc-card-main">
            <div class="acc--heading {{ section.settings.accordien-size}}">
              {{block.settings.card-heading | replace: 'p>', 'span>' }}
            </div>
            <div class="acc-card-content">
            {% if block.settings.card-text != blank %}
                <div class="acc-desc">
                  {{block.settings.card-text | replace: 'p>', 'span>' }}
                </div>
             {% endif %}
            {% style %}
              .card-{{block.id}} .acc-card-detail{
                font-size:{{block.settings.card--text-size}}px;
              }
            {% endstyle %}
              <div class="acc-card-row">
               <div class="acc--card">
                 <div class="acc-card-cont">
                   <div class="acc-card-number">{{block.settings.card-number}}</div>
                   <div class="acc-card-detail"> {{block.settings.card-detail | replace: 'p>', 'span>'}}</div>
                 </div>
               </div>
              <div class="acc--card">
                <div class="acc-card-cont">
                  <div class="acc-card-number">{{block.settings.card-number2}}</div>
                  <div class="acc-card-detail"> {{block.settings.card-detail2 | replace: 'p>', 'span>'}}</div>
                </div>
              </div>
              <div class="acc--card">
                <div class="acc-card-cont">
                  <div class="acc-card-number">{{block.settings.card-number3}}</div>
                  <div class="acc-card-detail"> {{block.settings.card-detail3 | replace: 'p>', 'span>'}}</div>
                </div>
              </div>
            </div>
            </div>
        </div>
      </div>
          {% endif %}
         {%- when 'video' -%}
    {% if block.settings.v-heading != blank %}
  <div class="accordien--card acc-table-video">
        <div class="acc-card-main">
            <div class="acc--heading {{ section.settings.accordien-size}}">
              {{block.settings.v-heading | replace: 'p>', 'span>'}}
            </div>
            <div class="acc-card-content">
             {% if block.settings.v-text != blank%}
                <div class="acc-desc">
                {{block.settings.v-text | replace: 'p>', 'span>'}}
                </div>
             {% endif %}
              <div class="acc-card-row">
               <div class="acc--video">
                 <div class="acc-card-cont">
                   <div class="acc-card-video"> 
                     {% if block.settings.video_url_desktop != blank %}
                         <video loading="lazy" class=" " muted autoplay loop playsinline src="{{block.settings.video_url_desktop}}" ></video>
                     {% else %}
                        {%- if block.settings.video_url.type == 'youtube' -%}
                        <iframe src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?enablejsapi=1" class="js-youtube" allow="autoplay; encrypted-media" allowfullscreen title="{{ block.settings.description | escape }}"></iframe>
                        {%- else -%}
                        <iframe src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}" class="js-vimeo" allow="autoplay; encrypted-media" allowfullscreen title="{{ block.settings.description | escape }}"></iframe>
                        {%- endif -%}
                      {% endif %}
                   </div>
                 </div>
               </div>
                 <div class="acc--table">
                 <div class="acc-card-table">
                {% if block.settings.custom-html != blank %}
                  {{ block.settings.custom-html }}
                {% else %}
                   <div class="acc-card-table">
                    <div class="table-row-1 table-border">
                      <div class="table-column">a</div>
                      <div class="table-column">a</div>
                      <div class="table-column">a</div>
                      <div class="table-column">a</div>
                    </div>
                      <div class="table-row-2 table-border">
                      <div class="table-column">a</div>
                      <div class="table-column">a</div>
                      <div class="table-column">a</div>
                      <div class="table-column">a</div>
                           <div class="table-column">a</div>
                    </div>
                      <div class="table-row-3 table-border">
                      <div class="table-column">a</div>
                      <div class="table-column">a</div>
                      <div class="table-column">a</div>
                      <div class="table-column">a</div>
                      <div class="table-column">a</div>
                    </div>
                   </div>
                {% endif %}
                 </div>
               </div>
            </div>
            </div>
        </div>
      </div>
      {% endif %}
    {% when "mvideos" %}
